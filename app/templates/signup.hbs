<div class="container">
  {{#if responseMessage}}
    <div class="alert alert-success">{{responseMessage}}</div><br>
  {{/if}}
  <div class="row">
    <div class="col-md-4 col-md-offset-3">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <span class="glyphicon">
            <span class="glyphicon-user"></span>
          </span>
          <strong class="">Sign up</strong>
        </div>
        <div class="panel-body">
          <form role="form">
            <div class="form-group">
              <label for="username">Email</label>
              {{input type="email" class="form-control" id="emailAddress" value=emailAddress autofocus="autofocus" placeholder="Enter your email address." aria-describedby="emailHelp"}}
              <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
              <label for="passwordField">Password</label>
              {{input type="password" class="form-control" id="passwordField" value=passwordField placeholder="Enter your password." aria-describedby="passwordHelp"}}
            </div>
            <div class="form-group">
              <label for="passwordAgain">Re-enter Password</label>
              {{input type="password" class="form-control" id="passwordAgain" value=passwordAgain placeholder="Re-enter your password." aria-describedby="passwordHelp"}}
              <small id="passwordHelp" class="form-text text-muted">Combine words and numbers with alphanumerals.</small>
            </div>
            <div class="form-group last">
              <div class="col-sm-9">
                <button disabled={{isDisabled}} class="btn btn-primary" {{action 'newSignup'}}>Sign up</button>
              </div>
            </div>
          </form>
        </div>
        <div class="panel-footer">Welcome to a new learnig experience.</div>
      </div>
    </div>
  </div>
</div>